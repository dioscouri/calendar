<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade" client="site">
	<name>mod_calendar_upcoming</name>
	<author>Dioscouri</author>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>http://www.dioscouri.com</authorUrl>
	<version>1.0.0</version>
	<creationDate>May 2011</creationDate>
	<copyright>2012 Dioscouri.com</copyright>
	<license>GNU General Public License</license>
	<description>MOD_CALENDAR_UPCOMING_XML_DESC</description>
    
	<files>
		<filename module="mod_calendar_upcoming">mod_calendar_upcoming.php</filename>
		<filename>index.html</filename>
        <filename>helper.php</filename>
		<folder>tmpl</folder>
	</files>
    
	<languages folder="languages">
		<language tag="en-GB">en-GB.mod_calendar_upcoming.ini</language>
        <language tag="en-GB">en-GB.mod_calendar_upcoming.sys.ini</language>
	</languages>
    
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/administrator/components/com_calendar/elements">
                <field name="item_id" type="text" default="" label="Item ID" description="Default Item ID" />
                
                <field name="types" type="textarea" default="" label="Event Type Filters" description="A list of event types to filter by, each one separated by a comma. Provide the event type ID.  If left blank, no event type filter will be applied." rows="5" cols="35" />
                <field name="venues" type="textarea" default="" label="Venue Filters" description="A list of venues to filter by, each one separated by a comma. Provide the venue DS-ID. If left blank, no venue filter will be applied." rows="5" cols="35" />
                
            </fieldset>
            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
        
                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
        
                <field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
        
                <field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field name="cachemode" type="hidden" default="static">
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
    
	<params>
        <param name="item_id" type="text" default="" label="Item ID" description="Default Item ID" />
		<param name="ids" type="text" default="" label="Event Instance IDs" description="Event Instance ID Numbers, each one separated by a comma" />
        <param name="use_upcoming" type="radio" default="0" label="Use Upcoming Events?" description="Use Items from the Upcoming Events Queue?">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param name="limit" type="text" default="3" label="LIMIT" description="LIMIT DESC" />
		<param name="layout" type="list" default="large" label="Layout" description="Choose a layout">
			<option value="small">Small</option>
			<option value="medium">Medium</option>
			<option value="large">Large</option>
		</param>
        <param name="slideshow" type="radio" default="0" label="Slideshow" description="Slideshow?">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>
</extension>