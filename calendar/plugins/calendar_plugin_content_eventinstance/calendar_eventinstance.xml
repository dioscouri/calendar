<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content" method="upgrade">
	<name>Content - Calendar Event Instances</name>
	<version>0.1.0</version>
	<creationDate>June 2011</creationDate>
	<author>Dioscouri</author>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>http://www.dioscouri.com</authorUrl>
	<copyright>2010 Dioscouri.com</copyright>
	<license>GNU General Public License v2</license>
	<description>Shows a calendar event instance in a content article. 
	Usage: {calendar_eventinstance id=1 layout=large} or
    Usage: {calendar_eventinstance ids=1,2,3 layout=large}  
    Layout Options: small, medium, large
	</description>
	
	<files>
		<filename plugin="calendar_eventinstance">calendar_eventinstance.php</filename>
        <folder>calendar_eventinstance</folder>
	</files>

    <languages folder="languages">
        <language tag="en-GB">en-GB.plg_content_calendar_eventinstance.ini</language>
    </languages>

	<params>
        <param name="item_id" type="text" default="" label="Item ID" description="Default Item ID" />
	</params>
			
</install>